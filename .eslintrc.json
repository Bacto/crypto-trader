{
  "rules": {
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-process-exit": 0,
    "no-console": 0,
    "no-loop-func": 0,
    "no-underscore-dangle": 0,
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "no-unused-vars": [ 2, {"vars": "all", "args": "none"} ],
    "no-redeclare": [ 2 ],
    "no-undef": 2,
    "require-yield": 0
  },
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "extends": "eslint:recommended"
}
